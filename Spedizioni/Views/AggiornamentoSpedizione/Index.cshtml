@model IEnumerable<Spedizioni.Models.AggiornamentoSpedizione>

@{
    ViewBag.Title = "Index";
}

<div class="d-flex flex-column font-monospace">
    <h2>Aggiornamenti Spedizioni</h2>
            
    <div class="align-self-end">
        <a href="@Url.Action("Create")" class="btn btn-warning btn-custom btn-sm">
            <i class="bi bi-plus-square"></i> Nuovo
        </a>
        <a href="@Url.Action("Index", "Spedizione")" class="btn btn-warning btn-custom btn-sm">
    <i class="bi bi-arrow-left-square"></i> Spedizioni
</a>

    </div>
</div>

<table class="table font-monospace">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDAggiornamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FK_IDSpedizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatoSped)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LuogoPacco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescrizEvento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UltimoAggiornamento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDAggiornamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FK_IDSpedizione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatoSped)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LuogoPacco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescrizEvento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UltimoAggiornamento)
        </td>
        <td class="text-end">
            <a href="@Url.Action("Edit", new { id = item.IDAggiornamento })" class="btn btn-warning btn-custom btn-sm">
                <i class="bi bi-pencil-square"></i>
            </a>
            
        </td>
    </tr>
}

</table>
